<html lang="en">

<%- include("../partials/header.ejs") %>

    <body>
        <%- include("../partials/nav.ejs") %>
            <div class="blogs content">
                <h2><u>All Blogs</u></h2>
                <% if (blogs.length> 0){ %>
                    <% blogs.forEach(blog=> { %>
                        <a class="single" href="/blogs/<%= blog._id %>">
                            <h3 class="title">
                                <%= blog.title %>
                            </h3>
                            <p class="snippet">
                                <i>
                                    <%= blog.snippet %>
                                </i>
                            </p>
                            <p class="snippet">
                                <%= blog.body %>
                            </p>
                        </a>
                        <% }) %>
                            <% } else{ %>
                                <p>There are no blogs to display ...</p>
                                <% } %>
            </div>

            <%- include('../partials/footer.ejs') %>

    </body>

</html>